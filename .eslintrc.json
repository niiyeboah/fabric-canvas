{
  "extends": ["vaadin", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "max-len": ["error", { "code": 120 }]
  }
}
